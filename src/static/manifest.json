{
  "name": "Vue 3 Typescript Starter",
  "version": "0.0.1",
  "description": "Vue 3 Typescript Starter",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-script.js"]
    }
  ]
}
