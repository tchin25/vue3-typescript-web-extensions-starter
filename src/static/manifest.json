{
  "name": "Vue 3 Typescript Starter",
  "version": "0.0.1",
  "description": "Vue 3 Typescript Starter",
  "manifest_version": 3,
  "permissions": ["storage"],
  "optional_host_permissions": ["*://*/*"],
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-script.js"]
    }
  ]
}
